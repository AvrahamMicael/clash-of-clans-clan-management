extends layout

block append styles
  link(rel="stylesheet", href="/css/error.css")

block content
  main.container.text-center.error-block
    h1 Error: #{message}
    if error
      h2= error.message
      if error.response && error.response.data
        h3= JSON.stringify(error.response.data)
      pre #{error.stack}
      pre.text-start= JSON.stringify(error, null, '\n')
